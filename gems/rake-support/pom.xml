<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>rubygems</groupId>
    <artifactId>torquebox-gems-parent</artifactId>
    <version>2.3.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>torquebox-rake-support</artifactId>
  <packaging>gem</packaging>
  <name>TorqueBox Rake Support</name>
  <description />
  <url>http://torquebox.org/</url>

  <dependencies>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rake</artifactId>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rspec</artifactId>
      <type>gem</type>
      <scope>test</scope>
    </dependency>
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>jruby-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>install-gem</id>
          </execution>
          <execution>
            <id>copy-rails-template</id>
            <phase>process-sources</phase>
            <goals>
              <goal>jruby</goal>
            </goals>
            <configuration>
              <script>
                require 'fileutils'
                def cp( src, dest )
                  puts %Q(copying #{src} to #{dest})
                  FileUtils.mkdir_p( dest )
                  FileUtils.cp_r( src, dest )
                end
                cp( %Q(${basedir}/share),
                    %Q(${basedir}/target/torquebox-rake-support) )
              </script>
            </configuration>
          </execution>
          <execution>
            <id>adjust-rails-template</id>
            <phase>process-sources</phase>
            <goals>
              <goal>jruby</goal>
            </goals>
            <configuration>
              <file>bin/adjust-rails-template.rb</file>
              <args>${project.version} ${env.BUILD_NUMBER}</args>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>rspec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>run-specs</id>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>gem-maven-plugin</artifactId>
        <configuration>
          <extraFiles>share/rails/template.rb</extraFiles>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
