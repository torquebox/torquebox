<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>rubygems</groupId>
    <artifactId>torquebox-gems-parent</artifactId>
    <version>2.0.1</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>torquebox-capistrano-support</artifactId>
  <packaging>gem</packaging>
  <name>TorqueBox Capistrano Support</name>
  <description />
  <url>http://torquebox.org/</url>

  <dependencies>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>jruby-openssl</artifactId>
      <type>gem</type>
      <scope>test</scope>
      <version>0.7.4</version>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>capistrano</artifactId>
      <type>gem</type>
      <scope>test</scope>
      <version>2.9.0</version>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>capistrano-spec</artifactId>
      <type>gem</type>
      <scope>test</scope>
      <version>0.1.0</version>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rspec</artifactId>
      <type>gem</type>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>jruby-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>install-gem</id>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>rspec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>run-specs</id>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
