<assembly>
  <id>bin</id>
  <baseDirectory>torquebox-${project.version}</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${basedir}/../assemblage/assembly/target/stage/torquebox-${project.version}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/docs</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>org.torquebox:torquebox-docs-en_US:*:pdf</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/docs/html</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.torquebox:torquebox-docs-en_US:zip:html</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
