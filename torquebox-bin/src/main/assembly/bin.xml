<assembly>
  <id></id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/stage</directory>
      <outputDirectory>/torquebox-${pom.version}-bin</outputDirectory>
      <excludes>
        <exclude>jboss/bin/*.sh</exclude>
        <exclude>jruby/bin/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/stage/jboss/bin</directory>
      <outputDirectory>/torquebox-${pom.version}-bin/jboss/bin</outputDirectory>
      <fileMode>755</fileMode>
      <includes>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/stage/jruby/bin</directory>
      <outputDirectory>/torquebox-${pom.version}-bin/jruby/bin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/torquebox-${pom.version}-bin/gems</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.torquebox:torquebox-gem:gem</include>
        <include>org.torquebox:torquebox-rails:gem</include>
        <include>org.torquebox:torquebox-capistrano:gem</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/torquebox-${pom.version}-bin/docs/html</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}</outputFileNameMapping>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.torquebox:torquebox-docs-en_US:zip:html</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/torquebox-${pom.version}-bin/docs</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <useProjectArtifact>false</useProjectArtifact>
      <useProjectAttachments>false</useProjectAttachments>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>org.torquebox:torquebox-docs-en_US:pdf</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
