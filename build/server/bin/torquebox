require 'java'
require 'thor'
require 'torquebox-rake-support'

class TorqueBoxCommand < Thor

  desc "start", "Start TorqueBox"
  def start
    ENV['JBOSS_HOME'] = jboss_home
    ENV['JBOSS_OPTS'] = "-Djruby.home=#{jruby_home}"
    TorqueBox::DeployUtils.run_server
  end

  no_tasks {
    def jboss_home
      File.join(File.dirname(__FILE__), '..', 'lib', 'jboss')
    end

    def jruby_home
      java.lang.System.getProperty('jruby.home')
    end
  }

end

TorqueBoxCommand.start
