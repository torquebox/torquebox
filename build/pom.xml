<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>2.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-build</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Build Aggregator</name>

  <dependencies>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-modules-parent</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>torquebox-gems-parent</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
  </dependencies>

  <modules>
    <module>assembly</module>
  </modules>

  <profiles>
    <profile>
      <id>full</id>
      <modules>
        <module>server</module>
        <module>dist</module>
        <module>incremental</module>
      </modules>
    </profile>
    <profile>
      <id>dist</id>
      <modules>
        <module>server</module>
        <module>dist</module>
        <module>incremental</module>
      </modules>
    </profile>
  </profiles>

</project>
